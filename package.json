const mongoose = require('mongoose');

const quizAttemptSchema = new mongoose.Schema({
  enrollment: {
    type: mongoose.Schema.ObjectId,
    ref: 'Enrollment',
    required: true
  },
  quiz: {
    type: mongoose.Schema.ObjectId,
    ref: 'Quiz',
    required: true
  },
  attemptNumber: {
    type: Number,
    required: true
  },
  answers: [{
    question: {
      type: mongoose.Schema.ObjectId,
      required: true
    },
    selectedOption: mongoose.Schema.ObjectId,
    textAnswer: String,
    isCorrect: Boolean,
    pointsEarned: Number
  }],
  score: {
    type: Number,
    default: 0
  },
  maxScore: {
    type: Number
  },
  percentage: {
    type: Number,
    default: 0
  },
  isPassed: {
    type: Boolean,
    default: false
  },
  startedAt: {
    type: Date,
    default: Date.now
  },
  submittedAt: {
    type: Date
  },
  timeTaken: {
    type: Number // in seconds
  }
}, {
  timestamps: true
});

// Calculate score before saving
quizAttemptSchema.pre('save', function(next) {
  if (this.isModified('answers')) {
    this.score = this.answers.reduce((total, answer) => {
      return total + (answer.pointsEarned || 0);
    }, 0);
    
    if (this.maxScore > 0) {
      this.percentage = Math.round((this.score / this.maxScore) * 100);
    }
  }
  next();
});

module.exports = mongoose.model('QuizAttempt', quizAttemptSchema);
